{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "pretty": false,
    "stripInternal": true,
    "newLine": "lf",
    "typeRoots": ["./typing/*", "./node_modules/@types"]
  },
  "include": ["src", "src/typings.d.ts"],
  "files": ["src/typings.d.ts"],
  "exclude": ["node_modules"]
}
